---
# Adapted from drake's configuration file (link below)
# https://github.com/RobotLocomotion/drake/blob/master/.clang-tidy

# Allow the usage of magic numbers
# Allow the usage of non-private (protected) member variables
# Allow the usage of pointer arithmetic for MuJoCo implementations

Checks: >
        clang-analyzer-*,
        clang-diagnostic-*,
        cppcoreguidelines-*,
        google-*,
        modernize-*,
        performance-*,
        readability-*,
        -readability-redundant-access-specifiers,
        -cppcoreguidelines-non-private-member-variables-in-classes,
        -cppcoreguidelines-avoid-magic-numbers,
        -readability-magic-numbers,
        -readability-identifier-length,
        -cppcoreguidelines-pro-bounds-pointer-arithmetic,

WarningsAsErrors: ''
FormatStyle: none
HeaderFilterRegex: ''

CheckOptions:
  - { key: readability-identifier-naming.ClassCase,             value: CamelCase  }
  - { key: readability-identifier-naming.NamespaceCase,         value: lower_case }
  - { key: readability-identifier-naming.PrivateMemberPrefix,   value: 'm_'        }
  - { key: readability-identifier-naming.StaticVariablePrefix,  value: 's_' }
  - { key: readability-identifier-naming.StructCase,            value: CamelCase  }
  - { key: readability-identifier-naming.VariableCase,          value: lower_case }
  - { key: readability-identifier-naming.ConstantCase,          value: UPPER_CASE }
  - { key: readability-identifier-naming.ConstexprVariableCase, value: UPPER_CASE }
...
